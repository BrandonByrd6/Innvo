@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model Innvo.Models.Token.TokenRequest;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Innvo Demo</h1>
    @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext!.Session.GetString("_token")))
    {
        <h2>Login</h2>
        <div class="container" id="Login-Area">
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label for="UserName">Username</label>
                    <input type="text" class="form-control" name="UserName" placeholder="jdoe" />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" name="Password" placeholder="**********"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-2 col-md-4">Login</button>
            </form>
        </div>
    }
    else {
       <a href="/Inventroy/" class="Button">Go to Inventory</a>
    }
</div>

