@model Innvo.Models.Item.ItemCreate;

<div class="container">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Gerber Baby Food" />
        </div>
        <div class="form-group">
            <label for="Code">Code</label>
            <input type="text" class="form-control" name="Code" placeholder="20112221" />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="textbox" class="form-control" name="Description" placeholder="This a Description" />
        </div>
        <div class="form-group">
            <label for="ImgUrl">Image URL</label>
            <input type="text" class="form-control" name="ImgUrl" placeholder="http://example.com/img1" />
        </div>
        <div class="form-group">
            <label for="UOMId">Unit Of MeasureId</label>
            <input type="text" class="form-control" name="UOMId" placeholder="1" />
        </div>
        <div class="form-group">
            <label for="Quantity">Quantity</label>
            <input type="text" class="form-control" name="Quantity" placeholder="12" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-2 col-md-4">Create</button>
    </form>
</div>
