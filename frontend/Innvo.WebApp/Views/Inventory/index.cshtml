@model IEnumerable<Innvo.Models.Inventory.InventoryListItem>

<h1 class="center-text"> All Inventories</h1>

<table class="table table-striped">
     <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>Abbreviation</th>
            <th>Quantity</th>
            <th>&nbsp</th>
        </tr>
     </thead>
     <tbody>
        @foreach(var i in Model) {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Code</td>
                <td>@i.Abbrivation</td>
                <td>@i.Quantity</td>
                <td><a asp-action="Details" asp-route-id=@i.Id>Details</a> <a asp-action="Edit" asp-route-id=@i.Id>Edit</a></td>
            </tr>
        }
     </tbody>
</table>