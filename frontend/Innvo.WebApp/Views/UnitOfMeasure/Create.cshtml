@model Innvo.Models.UnitOfMeasure.UnitOfMeasureCreate;

<div class="container">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" name="Name" placeholder="Tablespoon" />
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <input type="textbox" class="form-control" name="Description" placeholder="This a Description" />
        </div>
        <div class="form-group">
            <label for="Abbreviation">Abbreviation</label>
            <input type="text" class="form-control" name="Abbreviation" placeholder="tbsp" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-2 col-md-4">Create</button>
    </form>
</div>
