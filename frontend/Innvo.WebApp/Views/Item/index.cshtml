@model IEnumerable<Innvo.Models.Item.ItemListItem>

<h1 class="center-text"> All Items</h1>
<a asp-action="Create" class="text-primary">Create a Item</a>

<table class="table table-striped">
     <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
            <th>BarCode</th>
            <th>&nbsp</th>
        </tr>
     </thead>
     <tbody>
        @foreach(var i in Model) {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.Code</td>
                <td>@i.BarCode</td>
                <td><a asp-action="Details" asp-route-id=@i.Id>Details</a> <a asp-action="Edit" asp-route-id=@i.Id>Edit</a> <a asp-action="Delete" asp-route-id=@i.Id>Delete</a></td>
            </tr>
        }
     </tbody>
</table>