@model Innvo.Models.Inventory.InventroyUpdate

<h1>Edit</h1>
<h4>Inventory</h4>
@if (ViewData["ErrorMsg"] != null)
{
        <h4 class="text-center">@ViewData["ErrorMsg"]</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <input asp-for="ItemId" class="form-control" />
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMesureId" class="control-label"></label>
                <input asp-for="UnitOfMesureId" class="form-control" />
                <span asp-validation-for="UnitOfMesureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </form>
    </div>    
</div>

<div>
    <a asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}